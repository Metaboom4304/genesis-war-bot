case '🗺 Map':
  try {
    const { status } = await fetchMapStatus();

    const link = 'https://genesis-data.onrender.com'; // ← Актуальная ссылка

    const message = status.enabled
      ? `[🗺️ Открыть карту](${link})\n\n${status.message}`
      : '❌ Карта временно отключена.';

    await bot.sendMessage(chatId, message, {
      parse_mode: 'Markdown'
    });
  } catch (err) {
    console.error('🛑 Map error:', err);
    await bot.sendMessage(chatId, '❌ Ошибка загрузки карты.');
  }

  return sendReplyMenu(bot, chatId, uid);
